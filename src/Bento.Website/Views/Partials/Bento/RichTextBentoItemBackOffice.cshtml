@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<IPublishedElement>
<div class="card hero">
	<div class="card-content">
		<div class="title">Backoffice Bento view for 'Rich Text Bento Item' (alias: richTextBentoItem)</div>
		<div class="sub-title">To edit, please open the file at: ~/Views/Partials/Bento/RichTextBentoItemBackOffice.cshtml</div>
		<p><strong>Properties</strong></p>
		@foreach (var x in Model.Properties)
		{
			<p>
				@(x.Alias):<br />
				@(Html.Raw(x.GetValue()))
			</p>
		}
	</div>
</div>